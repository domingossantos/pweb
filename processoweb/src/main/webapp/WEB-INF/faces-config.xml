<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<application>
		<action-listener>br.com.domsantos.processoweb.mb.common.ProcessoWebActionListener</action-listener>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>

		<lifecycle>
			<phase-listener>com.ocpsoft.pretty.faces.event.MultiPageMessagesSupport</phase-listener>
		</lifecycle>

	<validator>
		<validator-id>validadorEmail</validator-id>
		<validator-class>br.com.domsantos.common.EmailValidator</validator-class>
	</validator>

</faces-config>
